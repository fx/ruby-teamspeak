<li class="channel<%= ' channel-empty' if channel.empty? %>">
	<%= channel.name %>
	<% if !children.empty? -%>
	<ul class="channels">
		<% @child = children %>
                <%= @child.html_safe %>
	</ul>
	<% end -%>
	
	<% if !clients.empty? -%>
	<ul class="clients">
		<% @cl = clients %>
		<%= @cl.html_safe %>
	</ul>
	<% end -%>
</li>
